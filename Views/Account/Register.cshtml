@model project.Models.RegisterViewModel

<head>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta charset="utf-8" />
	<meta name="viewport" content="width=500, initial-scale=1.0">
	<title>@ViewBag.Title</title>
	@Scripts.Render("~/bundles/modernizr")
	<style>

		form {
			width: 500px;
			background-color: rgba(255,255,255,0.13);
			position: fixed;
			transform: translate(-50%,-50%);
			top: 40%;
			left: 50%;
			border-radius: 10px;
			backdrop-filter: blur(10px);
			border: 2px solid rgba(255,255,255,0.1);
			box-shadow: 0 0 40px rgba(8,7,16,0.6);
			padding: 50px 35px;
		}

		h5 {
			color: darkblue;
		}

		main {
			background-image: url("https://thumbs.dreamstime.com/b/wave-particles-white-background-network-connection-dots-lines-digital-d-rendering-178602862.jpg" );
			background-repeat: no-repeat;
			background-attachment: fixed;
			background-size: cover;
		}
		.form-group {
			margin: 10px;
		}
	</style>
</head>
<main>

	<div class="form">
		<h2>@ViewBag.Title.</h2>
		<section class="section register min-vh-100  d-flex flex-column align-items-center justify-content-center py-4">

			<div class="container">
				<div class="row justify-content-center">
					<div class="card-body">
						<section id="loginForm" class=" h-50 justify-content-center">
							@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
							{
								@Html.AntiForgeryToken()
								<div class="pt-4 pb-3">
									<h5 class="card-title text-center pb-0 fs-4">
										<h5 class="card-title text-center pb-0 fs-4">Create an Account</h5>
										<p>Entrez vos informations personnelles pour créer un compte</p>
									</h5>
									<hr />
								</div>
								@Html.ValidationSummary("", new { @class = "text-danger" })

								<div class="form-group">
									@Html.LabelFor(m => m.Email, new { @class = "control-label" })
									<div class="col-sm-10">
										@Html.TextBoxFor(m => m.Email, new { @class = "col-xs-2 form-control" })
									</div>
								</div>

								<div class="form-group">
									@Html.LabelFor(m => m.Username, new { @class = " control-label" })
									<div class="col-md-10">
										@Html.TextBoxFor(m => m.Username, new { @class = "col-xs-2 form-control" })
									</div>
								</div>

								<div class="form-group">
									@Html.LabelFor(m => m.Password, new { @class = "control-label" })
									<div class="col-md-10">
										@Html.PasswordFor(m => m.Password, new { @class = "col-xs-2 form-control" })
									</div>
								</div>

								<div class="form-group">
									@Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
									<div class="col-md-10">
										@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "col-xs-2 form-control" })
									</div>
								</div>

								<div class="form-group">
									<div class="col-md-offset-2 col-md-10">
										<input type="submit" value="S'inscrire" class="btn btn-primary btn-lg" />
									</div>
								</div>
								<p>
									@Html.ActionLink("Se connecter", "Login")
								</p>
							}


						</section>

					</div>

				</div>
			</div>
		</section>



	</div>

</main>